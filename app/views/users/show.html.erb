<table class="profile" summary="Profile Information">
  <tr>
    <td class="main">
        <p id="notice">
          <%= notice %>
        </p>
      <br/>

        <h1 class="user_info">
          <%= gravatar_for @user %>
              <%= @user.name %>
        </h1>
        <% if @user.microposts.any? %>
            <table class="microposts" summary="User microposts">
              <%= render @microposts %>
            </table>
          <%= will_paginate @microposts %>
          <div class="digg_pagination">
            <div class="page_info">
              <%= page_entries_info @microposts, :entry_name => 'microposts' %>
            </div>
            <%= will_paginate @microposts, :container => false %>
          </div>
        <% end %>
    </td>
    <td class="sidebar round">
      <strong>Name:</strong><%= @user.name %><br/>
      <strong>Email: </strong><%= @user.email %>
      <% if @user.admin %>
            <strong>Administrador</strong>
      <% end %>
      <strong>Microposts: </strong><%= @user.microposts.count %><br/>
      <strong>URL: </strong><%= link_to user_path(@user), user_path(@user) %>
    </td>
  </tr>
</table>
<%= link_to 'Edit', edit_user_path(@user), :class => "button round" %>
<%= link_to 'Back', users_path, :class => "button round" %>